<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<% if flash[:notice].blank? %>
    <div class="notice">
      <%=	 flash[:notice] %>
    </div>
<% end %>

<div class="pages show">
  <h2>Create New page</h2>

      <table summary="Summary for Page">
        <tr>
          <th>Name</th>
          <td><%=	 @page.name %></td>
        </tr>
        <tr>
          <th>Position</th>
          <td><%=	 @page.position %></td>
        </tr>
        <tr>
          <th>Visible</th>
          <td><%=	 @page.visible %></td>
        </tr>
        <tr>
          <th>Permalink</th>
          <td><%=	 @page.permalink %></td>
        </tr>
        <tr>
          <th>Created</th>
          <td><%=	 @page.created_at %></td>
        </tr>
        <tr>
          <th>Updated</th>
          <td><%=	 @page.updated_at %></td>
        </tr>
      </table>

</div>