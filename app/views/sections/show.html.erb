  <table summary="Summary for Page">
    <tr>
      <th class="left">Name</th>
      <td><%=	 @section.name %></td>
    </tr>
    <tr>
      <th class="left">Position</th>
      <td><%=	 @section.position %></td>
    </tr>
    <tr>
      <th class="left">Visible</th>
      <td><%=	 @section.visible %></td>
    </tr>
    <tr>
      <th class="left">Content Type</th>
      <td><%=	 @section.content_type %></td>
    </tr>
    <tr>
      <th class="left">Content</th>
      <td><%=	 @section.content %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%=	 @section.created_at %></td>
