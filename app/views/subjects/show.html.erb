<%= link_to("<< Back to List", {:controller => 'subjects', :action => 'index'}, :class => 'back-link') %>

<% if !flash[:nnn].blank? %>
    <div class="notice">
      <%= flash[:nnn] %>
    </div>
<% end %>

<div class="subjects show">
  <h2>Show Subject</h2>
  <table summary="Shubject defailt view">
    <tr>
      <th>Name</th>
      <td><%= @subject.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @subject.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @subject.visible ? 'True' : 'False' %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @subject.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @subject.updated_at %></td>
    </tr>
  </table>


</div>
